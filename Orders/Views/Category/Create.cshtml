@model Orders.Models.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Nowa kategoria";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="mt-2 btn btn-primary">Dodaj</button>
</form>

<a href="@Url.Action("Index", "Category")" class="mt-2 btn btn-secondary">Powrót do kategorii</a>
