@model IEnumerable<Orders.Models.Domains.Order>

@{
    ViewData["Title"] = "Moje zamówienia";
}

<h2>@ViewData["Title"]</h2>

<a href="@Url.Action("Create", "Order")" class="btn btn-primary">Dodaj nowe zamówienie</a>

<table class="table">
    <thead>
        <tr>
            <th>Data</th>
            <th>Produkt</th>
            <th>Ilość</th>
            <th>Status</th>
            <th>Suma</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Date.ToString("dd/MM/yyyy")</td>
                <td>@order.Product.Name</td>
                <td>@order.Quantity</td>
                <td>
                    @if (order.IsCompleted)
                    {
                        <span class="badge bg-success">Zakończone</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">W trakcie</span>
                    }
                </td>
                <td>@order.TotalValue.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

